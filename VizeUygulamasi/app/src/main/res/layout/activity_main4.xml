<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/bklogo" />

        <TextView
            android:id="@+id/corbacesit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=""
            android:layout_margin="10dp"
            android:textColor="#FF5722"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tuztext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:text="Tuz Oranı"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/tuzbar"
            style="@android:style/Widget.Material.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:indeterminate="false"
            android:max="2"
            android:progress="0"
            android:progressBackgroundTint="@color/white"
            android:progressTint="@color/white" />

        <TextView
            android:id="@+id/acitext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Acı Oranı" />

        <SeekBar
            android:id="@+id/acibar"
            style="@android:style/Widget.Material.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:max="2"
            android:progress="0"
            android:progressBackgroundTint="@color/white" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF5722"
            android:layout_margin="10dp"
            android:textSize="25dp"
            android:layout_marginLeft="12dp"
            android:text="Lütfen İsteklerinizi İşaretleyiniz" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_height="match_parent">

                <Switch
                    android:id="@+id/sarimsak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sarımsak"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:trackTint="@color/white"
                    android:visibility="invisible" />

                <Switch
                    android:id="@+id/nane"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nane"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:trackTint="@color/white"
                    android:visibility="invisible" />

                <Switch
                    android:id="@+id/dil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dil"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:trackTint="@color/white"
                    android:visibility="invisible" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_height="match_parent">

                <Switch
                    android:id="@+id/terbiye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terbiye"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:trackTint="@color/white"
                    android:visibility="invisible" />

                <Switch
                    android:id="@+id/beyin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beyin"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:trackTint="@color/white"
                    android:visibility="invisible" />

                <Switch
                    android:id="@+id/sirke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sirke"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:trackTint="@color/white"
                    android:visibility="invisible" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_height="match_parent">

                <Switch
                    android:id="@+id/krema"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Krema"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:trackTint="@color/white"
                    android:visibility="invisible" />

                <Switch
                    android:id="@+id/yag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yağ"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:trackTint="@color/white"
                    android:visibility="invisible" />

                <Switch
                    android:id="@+id/kasar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kaşar"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:trackTint="@color/white"
                    android:visibility="invisible" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_height="match_parent">

                <Switch
                    android:id="@+id/kitir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kıtır"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:trackTint="@color/white"
                    android:visibility="invisible" />

                <Switch
                    android:id="@+id/limon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limon"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:trackTint="@color/white"
                    android:visibility="invisible" />

                <Switch
                    android:id="@+id/tozbiber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toz Biber"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:trackTint="@color/white"
                    android:visibility="invisible" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF5722"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:layout_marginLeft="7dp"
            android:text="Ekstra İsteklerinizi Yazabilirsiniz" />

        <EditText
            android:id="@+id/baskaarzu"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="2dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:hint="Başka Bir Arzunuz?"
            android:textColorHint="#88FFFFFF"
            android:inputType="textPersonName"
             />

        <Button
            android:id="@+id/siparisver"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FF9800"
            android:text="Sipariş Ver"
            android:textAllCaps="false" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>