<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:srcCompat="@drawable/bklogo" />

        <CheckBox
            android:id="@+id/corba"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="27dp"
            android:layout_height="wrap_content"
            android:textColor="#B10D0D"
            android:text="Çorba" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/ezo"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Ezogelin"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="invisible" />

                    <RadioButton
                        android:id="@+id/dugun"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Düğün"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="invisible" />

                    <RadioButton
                        android:id="@+id/mercimek"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Mercimek"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="invisible" />

                    <RadioButton
                        android:id="@+id/brokoli"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Brokoli"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="invisible" />

                    <RadioButton
                        android:id="@+id/kellepaca"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Kelle-Paça"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="invisible" />

                    <RadioButton
                        android:id="@+id/yayla"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Yayla"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="invisible" />

                    <RadioButton
                        android:id="@+id/sehriye"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Şehriye"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="invisible" />

                    <RadioButton
                        android:id="@+id/domates"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Domates"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="invisible" />

                    <RadioButton
                        android:id="@+id/tarhana"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Tarhana"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="invisible" />

                    <RadioButton
                        android:id="@+id/mantar"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Mantar"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="invisible" />

                    <RadioButton
                        android:id="@+id/iskembe"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="İşkembe"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="invisible" />

                    <RadioButton
                        android:id="@+id/tavuk"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Tavuk"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:visibility="invisible" />
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:backgroundTint="#B51919"
                android:text="Devam"
                android:textColor="@color/white"
                android:textSize="36dp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>